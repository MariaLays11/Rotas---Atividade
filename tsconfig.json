{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
 
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,

    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    "strict": true,
    "noImplicitAny": false,
    "resolveJsonModule": true
  },

  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
